---
import LandingLayout from '../../layouts/LandingLayout.astro';

const title = 'Affiliate Dashboard | AgencyOS';
const description = 'Track your affiliate earnings, clicks, and conversions in real-time.';
---

<LandingLayout title={title} description={description}>
  <div class="dashboard-container">
    <!-- Header -->
    <header class="dashboard-header">
      <div class="header-left">
        <h1>üèØ Affiliate Dashboard</h1>
        <p class="subtitle">Welcome back, Affiliate</p>
      </div>
      <div class="header-right">
        <div class="quick-link-copy">
          <input type="text" id="refLink" value="https://agencyos.network?ref=YOUR_ID" readonly>
          <button class="copy-btn" onclick="copyLink()">üìã Copy</button>
        </div>
      </div>
    </header>

    <!-- Stats Grid -->
    <section class="stats-grid">
      <div class="stat-card earnings">
        <div class="stat-icon">üí∞</div>
        <div class="stat-content">
          <div class="stat-value">$0.00</div>
          <div class="stat-label">This Month</div>
        </div>
        <div class="stat-trend up">+0%</div>
      </div>
      <div class="stat-card clicks">
        <div class="stat-icon">üëÜ</div>
        <div class="stat-content">
          <div class="stat-value">0</div>
          <div class="stat-label">Clicks</div>
        </div>
        <div class="stat-trend">-</div>
      </div>
      <div class="stat-card conversions">
        <div class="stat-icon">‚úÖ</div>
        <div class="stat-content">
          <div class="stat-value">0</div>
          <div class="stat-label">Conversions</div>
        </div>
        <div class="stat-trend">-</div>
      </div>
      <div class="stat-card rate">
        <div class="stat-icon">üìä</div>
        <div class="stat-content">
          <div class="stat-value">0%</div>
          <div class="stat-label">Conversion Rate</div>
        </div>
        <div class="stat-trend">-</div>
      </div>
    </section>

    <!-- Main Content Grid -->
    <div class="main-grid">
      <!-- Left Column -->
      <div class="left-column">
        <!-- Earnings Chart -->
        <section class="chart-card">
          <div class="card-header">
            <h2>üìà Earnings (Last 30 Days)</h2>
            <select class="period-select">
              <option>Last 7 days</option>
              <option selected>Last 30 days</option>
              <option>Last 90 days</option>
            </select>
          </div>
          <div class="chart-placeholder">
            <div class="empty-chart">
              <span class="icon">üìä</span>
              <p>No earnings data yet</p>
              <p class="hint">Share your link to start earning!</p>
            </div>
          </div>
        </section>

        <!-- Recent Activity -->
        <section class="activity-card">
          <div class="card-header">
            <h2>üïê Recent Activity</h2>
          </div>
          <div class="activity-list">
            <div class="empty-state">
              <span class="icon">üì≠</span>
              <p>No activity yet</p>
              <p class="hint">Your clicks and conversions will appear here</p>
            </div>
          </div>
        </section>
      </div>

      <!-- Right Column -->
      <div class="right-column">
        <!-- Your Rank -->
        <section class="rank-card">
          <div class="card-header">
            <h2>üèÜ Your Rank</h2>
          </div>
          <div class="rank-content">
            <div class="rank-number">#-</div>
            <div class="rank-label">Not ranked yet</div>
            <div class="rank-hint">Make your first sale to get ranked!</div>
          </div>
        </section>

        <!-- Achievements -->
        <section class="achievements-card">
          <div class="card-header">
            <h2>üéñÔ∏è Achievements</h2>
          </div>
          <div class="achievements-grid">
            <div class="achievement locked">
              <div class="badge">üåü</div>
              <div class="name">First Blood</div>
              <div class="progress">0/1 sale</div>
            </div>
            <div class="achievement locked">
              <div class="badge">üî•</div>
              <div class="name">Rising Star</div>
              <div class="progress">0/5 sales</div>
            </div>
            <div class="achievement locked">
              <div class="badge">üíé</div>
              <div class="name">Diamond</div>
              <div class="progress">0/25 sales</div>
            </div>
            <div class="achievement locked">
              <div class="badge">üëë</div>
              <div class="name">King</div>
              <div class="progress">0/100 sales</div>
            </div>
          </div>
        </section>

        <!-- Quick Links -->
        <section class="quick-actions">
          <div class="card-header">
            <h2>‚ö° Quick Actions</h2>
          </div>
          <div class="action-grid">
            <a href="/affiliate/links" class="action-btn">
              üîó Generate Links
            </a>
            <a href="/affiliate/assets" class="action-btn">
              üé® Marketing Assets
            </a>
            <a href="/affiliate/leaderboard" class="action-btn">
              üèÜ Leaderboard
            </a>
            <a href="/affiliate/payouts" class="action-btn">
              üí≥ Payouts
            </a>
          </div>
        </section>

        <!-- Payout Info -->
        <section class="payout-info">
          <div class="card-header">
            <h2>üí≥ Next Payout</h2>
          </div>
          <div class="payout-content">
            <div class="payout-amount">$0.00</div>
            <div class="payout-threshold">
              <div class="progress-bar">
                <div class="progress-fill" style="width: 0%"></div>
              </div>
              <div class="threshold-text">$0 / $50 threshold</div>
            </div>
            <div class="payout-method">
              <span>Payment method: </span>
              <a href="#">Set up PayPal/Wise</a>
            </div>
          </div>
        </section>
      </div>
    </div>

    <!-- Bottom Section: Getting Started -->
    <section class="getting-started">
      <h2>üöÄ Getting Started</h2>
      <div class="steps-row">
        <div class="step done">
          <div class="step-check">‚úÖ</div>
          <div class="step-text">Create account</div>
        </div>
        <div class="step-arrow">‚Üí</div>
        <div class="step pending">
          <div class="step-check">‚≠ï</div>
          <div class="step-text">Copy your link</div>
        </div>
        <div class="step-arrow">‚Üí</div>
        <div class="step pending">
          <div class="step-check">‚≠ï</div>
          <div class="step-text">Share on social</div>
        </div>
        <div class="step-arrow">‚Üí</div>
        <div class="step pending">
          <div class="step-check">‚≠ï</div>
          <div class="step-text">Earn commission!</div>
        </div>
      </div>
    </section>
  </div>
</LandingLayout>

<style>
  .dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 20px 40px;
  }

  /* Header entrance */
  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    animation: fade-down 0.6s ease-out;
  }

  @keyframes fade-down {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .dashboard-header h1 {
    font-size: 2rem;
    margin: 0;
    background: linear-gradient(135deg, #10b981, #06b6d4, #10b981);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: text-shine 4s linear infinite;
  }

  @keyframes text-shine {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  .subtitle {
    color: var(--color-text-secondary);
    margin-top: 4px;
  }

  .quick-link-copy {
    display: flex;
    gap: 8px;
    animation: fade-down 0.6s ease-out 0.2s both;
  }

  .quick-link-copy input {
    width: 280px;
    padding: 10px 14px;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
    font-family: monospace;
    font-size: 0.85rem;
    transition: all 0.3s ease;
  }

  .quick-link-copy input:focus {
    border-color: #10b981;
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.15);
  }

  .copy-btn {
    padding: 10px 16px;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.2s;
    animation: btn-pulse 2.5s ease-in-out infinite 1s;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
    50% { box-shadow: 0 0 15px 3px rgba(16, 185, 129, 0.3); }
  }

  .copy-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }

  /* Stat cards with stagger entrance and hover glow */
  .stat-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
    transition: all 0.3s ease;
    animation: card-entrance 0.5s ease-out both;
    position: relative;
    overflow: hidden;
  }

  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }

  @keyframes card-entrance {
    from { opacity: 0; transform: translateY(20px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(16, 185, 129, 0.15);
    border-color: rgba(16, 185, 129, 0.3);
  }

  /* Stat card shine effect */
  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.08), transparent);
    transition: left 0.5s ease;
  }

  .stat-card:hover::before {
    left: 100%;
  }

  .stat-icon {
    font-size: 2rem;
    animation: icon-bounce 2s ease-in-out infinite;
  }

  @keyframes icon-bounce {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    position: relative;
    z-index: 1;
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    position: relative;
    z-index: 1;
  }

  .stat-trend {
    margin-left: auto;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    position: relative;
    z-index: 1;
  }

  .stat-trend.up {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
    animation: trend-glow 2s ease-in-out infinite;
  }

  @keyframes trend-glow {
    0%, 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.3); }
    50% { box-shadow: 0 0 10px 2px rgba(16, 185, 129, 0.2); }
  }

  .main-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 24px;
  }

  /* Cards with entrance animation */
  .chart-card, .activity-card, .rank-card, .achievements-card, .quick-actions, .payout-info {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 20px;
    animation: card-entrance 0.5s ease-out 0.5s both;
    transition: all 0.3s ease;
  }

  .chart-card:hover, .activity-card:hover, .rank-card:hover, 
  .achievements-card:hover, .quick-actions:hover, .payout-info:hover {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border-color: rgba(16, 185, 129, 0.2);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .card-header h2 {
    font-size: 1.1rem;
    margin: 0;
  }

  .period-select {
    padding: 6px 12px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
  }

  .chart-placeholder, .activity-list {
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-chart, .empty-state {
    text-align: center;
    color: var(--color-text-secondary);
  }

  .empty-chart .icon, .empty-state .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 12px;
  }

  .hint {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 8px;
  }

  .rank-content {
    text-align: center;
    padding: 20px 0;
  }

  .rank-number {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #10b981, #06b6d4, #10b981);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: text-shine 3s linear infinite;
  }

  .rank-label {
    color: var(--color-text-secondary);
    margin-top: 8px;
  }

  .rank-hint {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 12px;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .achievement {
    padding: 16px;
    background: var(--color-bg-primary);
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .achievement:hover {
    transform: translateY(-2px);
    border-color: rgba(16, 185, 129, 0.3);
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.1);
  }

  .achievement.locked {
    opacity: 0.5;
  }

  .achievement.locked:hover {
    opacity: 0.7;
  }

  .achievement .badge {
    font-size: 1.5rem;
    margin-bottom: 8px;
    display: inline-block;
    animation: badge-pulse 2s ease-in-out infinite;
  }

  @keyframes badge-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .achievement .name {
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 4px;
  }

  .achievement .progress {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .action-btn {
    padding: 14px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 500;
    transition: border-color 0.3s, transform 0.2s;
  }

  .action-btn:hover {
    border-color: #10b981;
    transform: translateY(-2px);
  }

  .payout-amount {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    color: var(--color-text-primary);
    margin-bottom: 16px;
  }

  .progress-bar {
    height: 8px;
    background: var(--color-bg-primary);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(135deg, #10b981, #059669);
    border-radius: 4px;
    transition: width 0.5s;
  }

  .threshold-text {
    text-align: center;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .payout-method {
    text-align: center;
    margin-top: 16px;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .payout-method a {
    color: #10b981;
    text-decoration: underline;
  }

  .getting-started {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 30px;
    margin-top: 30px;
  }

  .getting-started h2 {
    text-align: center;
    margin-bottom: 24px;
  }

  .steps-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .step {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--color-bg-primary);
    border-radius: 12px;
  }

  .step.done {
    background: rgba(16, 185, 129, 0.2);
  }

  .step-arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
  }

  @media (max-width: 1024px) {
    .main-grid {
      grid-template-columns: 1fr;
    }
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .dashboard-header {
      flex-direction: column;
      gap: 20px;
    }
    .stats-grid {
      grid-template-columns: 1fr;
    }
    .steps-row {
      flex-direction: column;
    }
    .step-arrow {
      transform: rotate(90deg);
    }
  }
</style>

<script>
  function copyLink() {
    const input = document.getElementById('refLink');
    input.select();
    document.execCommand('copy');
    
    const btn = document.querySelector('.copy-btn');
    btn.textContent = '‚úÖ Copied!';
    setTimeout(() => {
      btn.textContent = 'üìã Copy';
    }, 2000);
  }
</script>
