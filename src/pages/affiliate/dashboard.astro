</LandingLayout>

<style>
  .dashboard-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 100px 20px 40px;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .dashboard-header h1 {
    font-size: 2rem;
    margin: 0;
  }

  .subtitle {
    color: var(--color-text-secondary);
    margin-top: 4px;
  }

  .quick-link-copy {
    display: flex;
    gap: 8px;
  }

  .quick-link-copy input {
    width: 280px;
    padding: 10px 14px;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
    font-family: monospace;
    font-size: 0.85rem;
  }

  .copy-btn {
    padding: 10px 16px;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .copy-btn:hover {
    transform: translateY(-2px);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }

  .stat-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .stat-icon {
    font-size: 2rem;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .stat-trend {
    margin-left: auto;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .stat-trend.up {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
  }

  .main-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 24px;
  }

  .chart-card, .activity-card, .rank-card, .achievements-card, .quick-actions, .payout-info {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 20px;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .card-header h2 {
    font-size: 1.1rem;
    margin: 0;
  }

  .period-select {
    padding: 6px 12px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
  }

  .chart-placeholder, .activity-list {
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .empty-chart, .empty-state {
    text-align: center;
    color: var(--color-text-secondary);
  }

  .empty-chart .icon, .empty-state .icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 12px;
  }

  .hint {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 8px;
  }

  .rank-content {
    text-align: center;
    padding: 20px 0;
  }

  .rank-number {
    font-size: 3rem;
    font-weight: 800;
    color: #10b981;
  }

  .rank-label {
    color: var(--color-text-secondary);
    margin-top: 8px;
  }

  .rank-hint {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 12px;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .achievement {
    padding: 16px;
    background: var(--color-bg-primary);
    border-radius: 12px;
    text-align: center;
  }

  .achievement.locked {
    opacity: 0.5;
  }

  .achievement .badge {
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .achievement .name {
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 4px;
  }

  .achievement .progress {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .action-btn {
    padding: 14px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-align: center;
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 500;
    transition: border-color 0.3s, transform 0.2s;
  }

  .action-btn:hover {
    border-color: #10b981;
    transform: translateY(-2px);
  }

  .payout-amount {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    color: var(--color-text-primary);
    margin-bottom: 16px;
  }

  .progress-bar {
    height: 8px;
    background: var(--color-bg-primary);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(135deg, #10b981, #059669);
    border-radius: 4px;
    transition: width 0.5s;
  }

  .threshold-text {
    text-align: center;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .payout-method {
    text-align: center;
    margin-top: 16px;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .payout-method a {
    color: #10b981;
    text-decoration: underline;
  }

  .getting-started {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 30px;
    margin-top: 30px;
  }

  .getting-started h2 {
    text-align: center;
    margin-bottom: 24px;
  }

  .steps-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
  }

  .step {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: var(--color-bg-primary);
    border-radius: 12px;
  }

  .step.done {
    background: rgba(16, 185, 129, 0.2);
  }

  .step-arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
  }

  @media (max-width: 1024px) {
    .main-grid {
      grid-template-columns: 1fr;
    }
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .dashboard-header {
      flex-direction: column;
      gap: 20px;
    }
    .stats-grid {
      grid-template-columns: 1fr;
    }
    .steps-row {
      flex-direction: column;
    }
    .step-arrow {
      transform: rotate(90deg);
    }
  }
</style>

<script>
  function copyLink() {
    const input = document.getElementById('refLink');
    input.select();
    document.execCommand('copy');
    
    const btn = document.querySelector('.copy-btn');
    btn.textContent = 'âœ… Copied!';
    setTimeout(() => {
      btn.textContent = 'ğŸ“‹ Copy';
    }, 2000);
  }
</script>
