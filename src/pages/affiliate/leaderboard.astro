  }

  .position-title {
    font-weight: 600;
    margin-bottom: 4px;
  }

  .position-rank {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-secondary);
    margin-bottom: 4px;
  }

  .position-hint {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .btn-primary {
    padding: 14px 28px;
    background: linear-gradient(135deg, #10b981, #059669);
