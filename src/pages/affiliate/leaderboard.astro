    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .prizes-grid, .badges-grid {
      grid-template-columns: 1fr 1fr;
    }
    .podium {
      flex-direction: column;
      align-items: center;
    }
    .position-card {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
