    margin-bottom: 30px;
  }

  .badges-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .badge-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    text-align: center;
  }

  .badge-icon {
    font-size: 2.5rem;
    margin-bottom: 12px;
  }

  .badge-name {
    font-weight: 700;
    margin-bottom: 4px;
  }

  .badge-requirement {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    margin-bottom: 8px;
  }

  .badge-reward {
