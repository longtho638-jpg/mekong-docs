<style>
  .leaderboard-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 100px 20px 60px;
  }

  .back-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    display: inline-block;
    margin-bottom: 16px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 8px;
  }

  .prizes-section {
    margin-bottom: 50px;
  }

  .prizes-section h2 {
    text-align: center;
    margin-bottom: 24px;
  }

  .prizes-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .prize-card {
    background: var(--color-bg-tertiary);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 30px;
    text-align: center;
    transition: transform 0.3s;
  }

  .prize-card:hover {
    transform: translateY(-4px);
  }

  .prize-card.gold {
    border-color: #ffd700;
    background: linear-gradient(135deg, rgba(255,215,0,0.1), transparent);
  }

  .prize-card.silver {
    border-color: #c0c0c0;
  }

  .prize-card.bronze {
    border-color: #cd7f32;
  }

  .prize-rank {
    font-size: 1.25rem;
    margin-bottom: 12px;
  }

  .prize-amount {
    font-size: 2.5rem;
    font-weight: 800;
    color: #10b981;
    margin-bottom: 4px;
  }

  .prize-label {
    color: var(--color-text-secondary);
  }

  .podium-section {
    margin-bottom: 50px;
  }

  .podium {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 20px;
    padding: 40px 0;
  }

  .podium-place {
    text-align: center;
    width: 150px;
  }

  .podium-place .crown {
    font-size: 2rem;
    margin-bottom: 8px;
  }

  .podium-place .avatar {
    font-size: 3rem;
    margin-bottom: 8px;
  }

  .podium-place .name {
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 4px;
  }

  .podium-place .sales {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin-bottom: 4px;
  }

  .podium-place .earnings {
    color: #10b981;
    font-weight: 700;
    font-size: 1.25rem;
    margin-bottom: 16px;
  }

  .podium-stand {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    font-size: 2rem;
    font-weight: 800;
    padding: 20px;
    border-radius: 8px 8px 0 0;
  }

  .podium-stand.tall {
    padding: 40px 20px;
  }

  .leaderboard-table {
    margin-bottom: 50px;
  }

  .leaderboard-table h2 {
    margin-bottom: 24px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background: var(--color-bg-tertiary);
    border-radius: 16px;
    overflow: hidden;
  }

  th, td {
    padding: 16px 20px;
    text-align: left;
  }

  th {
    background: var(--color-bg-primary);
    font-weight: 600;
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    text-transform: uppercase;
  }

  tr {
    border-bottom: 1px solid var(--color-border);
  }

  tr.top-three {
    background: linear-gradient(135deg, rgba(16,185,129,0.1), transparent);
  }

  .rank .medal {
    font-size: 1.5rem;
  }

  .rank .number {
    color: var(--color-text-secondary);
  }

  td.name {
    font-weight: 600;
  }

  td.badge {
    font-size: 1.25rem;
  }

  td.sales {
    color: var(--color-text-secondary);
  }

  td.earnings {
    color: #10b981;
    font-weight: 700;
  }

  .your-position {
    margin-bottom: 50px;
  }

  .position-card {
    background: var(--color-bg-tertiary);
    border: 2px dashed var(--color-border);
    border-radius: 16px;
    padding: 30px;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .position-icon {
    font-size: 2.5rem;
  }

  .position-content {
