  }

  .team-social {
    display: flex;
    justify-content: center;
    gap: 8px;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .team-card:hover .team-social {
    opacity: 1;
    transform: translateY(0);
  }

  .social-link {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-tertiary);
