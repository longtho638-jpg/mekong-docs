<style>
  .cases-hero {
    text-align: center;
    padding: 64px 24px 32px;
  }

  .cases-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
  }

  .cases-hero p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .cases-grid {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
  }

  .case-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    position: relative;
    transition: all 0.3s ease;
  }

  .case-card:hover {
    transform: translateY(-4px);
    border-color: #22c55e;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .case-badge {
    position: absolute;
    top: -10px;
    right: 16px;
    background: linear-gradient(135deg, #eab308, #f97316);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .case-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
  }

  .avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #22c55e, #06b6d4);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .avatar.blue { background: linear-gradient(135deg, #3b82f6, #8b5cf6); }
  .avatar.purple { background: linear-gradient(135deg, #8b5cf6, #ec4899); }
  .avatar.gold { background: linear-gradient(135deg, #eab308, #f97316); }

  .case-header h3 {
    margin: 0;
    font-size: 1.125rem;
    color: var(--color-text-primary);
  }

  .role {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .case-metrics {
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--color-bg-tertiary);
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 16px;
    flex-wrap: wrap;
  }

  .metric {
    text-align: center;
  }

  .metric .label {
    display: block;
    font-size: 0.7rem;
    color: var(--color-text-muted);
    margin-bottom: 2px;
  }

  .metric .value {
    font-size: 1rem;
    font-weight: 700;
  }

  .metric .value.red { color: #ef4444; }
  .metric .value.green { color: #22c55e; }

  .metric.highlight {
    background: #22c55e;
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    margin-left: auto;
  }

  .metric.highlight .label { color: rgba(255,255,255,0.8); }
  .metric.highlight .value { color: white; font-size: 1.25rem; }

  .arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
  }

  blockquote {
    font-style: italic;
    color: var(--color-text-secondary);
    border-left: 3px solid #22c55e;
    padding-left: 16px;
    margin: 0 0 16px 0;
    font-size: 0.9rem;
  }

  .case-details h4 {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0 0 8px 0;
    text-transform: uppercase;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .tags code {
    background: var(--color-bg-tertiary);
    color: #22c55e;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  .case-timeline {
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid var(--color-border);
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .summary-section {
    max-width: 900px;
    margin: 48px auto;
    padding: 24px;
    text-align: center;
  }

  .summary-section h2 {
    font-size: 1.5rem;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 16px;
  }

  .summary-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 20px;
  }

  .big-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: #22c55e;
    margin-bottom: 4px;
  }

  .summary-card .label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, rgba(34, 197, 94, 0.05));
    border-top: 1px solid var(--color-border);
  }

  .cta-section h2 {
    font-size: 2rem;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .btn-primary {
    display: inline-block;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
  }

  @media (max-width: 768px) {
    .cases-hero h1 { font-size: 2rem; }
    .cases-grid { grid-template-columns: 1fr; }
  }
</style>
