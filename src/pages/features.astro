<style>
  .features-hero {
    text-align: center;
    padding: 80px 24px 48px;
  }

  .features-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .features-hero p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .features-categories {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .category {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 32px;
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .category-icon {
    font-size: 2rem;
  }

  .category-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }

  .command-count {
    background: var(--color-bg-tertiary);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .commands-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px;
  }

  .command-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 16px;
    transition: all 0.2s ease;
  }

  .command-card:hover {
    border-color: #22c55e;
    transform: translateY(-2px);
  }

  .command-card.agent {
    border-color: #8b5cf6;
  }

  .command-card.agent:hover {
    border-color: #a78bfa;
  }

  .command-card code {
    display: block;
    font-size: 0.875rem;
    color: #22c55e;
    margin-bottom: 8px;
    font-family: 'JetBrains Mono', monospace;
  }

  .command-card.agent code {
    color: #8b5cf6;
  }

  .command-card p {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .features-cta {
    text-align: center;
    padding: 80px 24px;
    background: linear-gradient(180deg, transparent, rgba(34, 197, 94, 0.05));
    border-top: 1px solid var(--color-border);
    margin-top: 48px;
  }

  .features-cta h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .features-cta p {
    color: var(--color-text-muted);
    margin-bottom: 24px;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
  }

  .btn-secondary {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
    border-color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .features-hero h1 {
      font-size: 2rem;
    }

    .category {
      padding: 24px;
    }

    .commands-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
