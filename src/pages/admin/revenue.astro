---
import LandingLayout from '../../layouts/LandingLayout.astro';

const title = 'Revenue Dashboard - AgencyOS Admin';
const description = 'Track progress toward $1M revenue goal.';

// Revenue targets for 2026
const REVENUE_TARGET = 1000000;
const MONTHLY_TARGET = REVENUE_TARGET / 12;
---

<LandingLayout title={title} description={description}>
  <section class="revenue-section">
    <div class="revenue-header">
      <h1>üí∞ Revenue Dashboard</h1>
      <p class="subtitle">Track progress toward $1M goal (2026)</p>
    </div>

    <!-- Main Goal Tracker -->
    <div class="goal-card">
      <div class="goal-header">
        <h2>üéØ 2026 Revenue Goal</h2>
        <span class="goal-amount">$1,000,000</span>
      </div>
      <div class="mega-progress">
        <div class="mega-progress-bar">
          <div class="mega-progress-fill" id="goal-progress" style="width: 0%"></div>
        </div>
        <div class="progress-labels">
          <span>$0</span>
          <span id="current-revenue">$0</span>
          <span>$1M</span>
        </div>
      </div>
      <div class="goal-stats">
        <div class="goal-stat">
          <span class="stat-value" id="ytd-revenue">$0</span>
          <span class="stat-label">YTD Revenue</span>
        </div>
        <div class="goal-stat">
          <span class="stat-value" id="monthly-avg">$0</span>
          <span class="stat-label">Monthly Avg</span>
        </div>
        <div class="goal-stat">
          <span class="stat-value" id="months-left">12</span>
          <span class="stat-label">Months Left</span>
        </div>
        <div class="goal-stat">
          <span class="stat-value" id="required-monthly">$83,333</span>
          <span class="stat-label">Required/Month</span>
        </div>
      </div>
    </div>

    <!-- Revenue Streams -->
    <div class="streams-grid">
      <!-- SaaS Revenue -->
      <div class="stream-card">
        <div class="stream-header">
          <span class="stream-icon">üí≥</span>
          <h3>SaaS Subscriptions</h3>
        </div>
        <div class="stream-amount" id="saas-revenue">$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Starter ($29/mo)</span>
            <span id="starter-count">0 users</span>
          </div>
          <div class="breakdown-item">
            <span>Pro ($99/mo)</span>
            <span id="pro-count">0 users</span>
          </div>
          <div class="breakdown-item">
            <span>Enterprise ($2K/mo)</span>
            <span id="enterprise-count">0 users</span>
          </div>
        </div>
        <div class="stream-target">
          Target: $412K/yr (41%)
        </div>
      </div>

      <!-- Franchise Revenue -->
      <div class="stream-card">
        <div class="stream-header">
          <span class="stream-icon">üåç</span>
          <h3>Franchise Network</h3>
        </div>
        <div class="stream-amount" id="franchise-revenue">$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Platform Fees</span>
            <span id="platform-fees">$0</span>
          </div>
          <div class="breakdown-item">
            <span>Revenue Share (30%)</span>
            <span id="hq-share">$0</span>
          </div>
          <div class="breakdown-item">
            <span>Active Franchisees</span>
            <span id="franchisee-count">0</span>
          </div>
        </div>
        <div class="stream-target">
          Target: $174K/yr (17%)
        </div>
      </div>

      <!-- Marketplace Revenue -->
      <div class="stream-card">
        <div class="stream-header">
          <span class="stream-icon">üè™</span>
          <h3>Marketplace</h3>
        </div>
        <div class="stream-amount" id="marketplace-revenue">$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Platform Take (30%)</span>
            <span id="marketplace-take">$0</span>
          </div>
          <div class="breakdown-item">
            <span>Total Sales</span>
            <span id="total-sales">$0</span>
          </div>
          <div class="breakdown-item">
            <span>Active Creators</span>
            <span id="creator-count">0</span>
          </div>
        </div>
        <div class="stream-target">
          Target: $100K/yr (10%)
        </div>
      </div>

      <!-- Services Revenue -->
      <div class="stream-card">
        <div class="stream-header">
          <span class="stream-icon">üõ†Ô∏è</span>
          <h3>Services & Consulting</h3>
        </div>
        <div class="stream-amount" id="services-revenue">$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Projects Completed</span>
            <span id="projects-count">0</span>
          </div>
          <div class="breakdown-item">
            <span>Avg Project Value</span>
            <span id="avg-project">$0</span>
          </div>
          <div class="breakdown-item">
            <span>Active Clients</span>
            <span id="clients-count">0</span>
          </div>
        </div>
        <div class="stream-target">
          Target: $240K/yr (24%)
        </div>
      </div>

      <!-- Affiliate Revenue -->
      <div class="stream-card">
        <div class="stream-header">
          <span class="stream-icon">ü§ù</span>
          <h3>Affiliate Payouts</h3>
        </div>
        <div class="stream-amount negative" id="affiliate-payouts">-$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Total Conversions</span>
            <span id="conversions-count">0</span>
          </div>
          <div class="breakdown-item">
            <span>Active Affiliates</span>
            <span id="affiliate-count">0</span>
          </div>
          <div class="breakdown-item">
            <span>Avg Commission</span>
            <span id="avg-commission">40%</span>
          </div>
        </div>
        <div class="stream-target cost">
          Budget: $50K/yr (cost)
        </div>
      </div>

      <!-- Net Revenue -->
      <div class="stream-card highlight">
        <div class="stream-header">
          <span class="stream-icon">üìà</span>
          <h3>Net Revenue</h3>
        </div>
        <div class="stream-amount large" id="net-revenue">$0</div>
        <div class="stream-breakdown">
          <div class="breakdown-item">
            <span>Gross Revenue</span>
            <span id="gross-revenue">$0</span>
          </div>
          <div class="breakdown-item">
            <span>- Payouts</span>
            <span id="total-payouts">$0</span>
          </div>
          <div class="breakdown-item">
            <span>= Net</span>
            <span id="net-calc">$0</span>
          </div>
        </div>
        <div class="stream-target success">
          On track: <span id="on-track">calculating...</span>
        </div>
      </div>
    </div>

    <!-- Monthly Chart -->
    <div class="chart-card">
      <h3>üìä Monthly Revenue (2026)</h3>
      <div class="chart-container">
        <div class="chart-bars" id="monthly-chart">
          <div class="chart-bar" data-month="Jan"><div class="bar-fill" style="height: 0%"></div><span>Jan</span></div>
          <div class="chart-bar" data-month="Feb"><div class="bar-fill" style="height: 0%"></div><span>Feb</span></div>
          <div class="chart-bar" data-month="Mar"><div class="bar-fill" style="height: 0%"></div><span>Mar</span></div>
          <div class="chart-bar" data-month="Apr"><div class="bar-fill" style="height: 0%"></div><span>Apr</span></div>
          <div class="chart-bar" data-month="May"><div class="bar-fill" style="height: 0%"></div><span>May</span></div>
          <div class="chart-bar" data-month="Jun"><div class="bar-fill" style="height: 0%"></div><span>Jun</span></div>
          <div class="chart-bar" data-month="Jul"><div class="bar-fill" style="height: 0%"></div><span>Jul</span></div>
          <div class="chart-bar" data-month="Aug"><div class="bar-fill" style="height: 0%"></div><span>Aug</span></div>
          <div class="chart-bar" data-month="Sep"><div class="bar-fill" style="height: 0%"></div><span>Sep</span></div>
          <div class="chart-bar" data-month="Oct"><div class="bar-fill" style="height: 0%"></div><span>Oct</span></div>
          <div class="chart-bar" data-month="Nov"><div class="bar-fill" style="height: 0%"></div><span>Nov</span></div>
          <div class="chart-bar" data-month="Dec"><div class="bar-fill" style="height: 0%"></div><span>Dec</span></div>
        </div>
        <div class="chart-target-line">
          <span>Target: $83,333/mo</span>
        </div>
      </div>
    </div>
  </section>
</LandingLayout>

<style>
  .revenue-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .revenue-header {
    text-align: center;
    margin-bottom: 32px;
  }

  .revenue-header h1 {
    font-size: 2.5rem;
    margin-bottom: 8px;
    background: linear-gradient(135deg, #22c55e, #f59e0b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle { color: var(--color-text-muted); font-size: 1.1rem; }

  .goal-card {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(245, 158, 11, 0.1));
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
  }

  .goal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .goal-header h2 { margin: 0; font-size: 1.5rem; }

  .goal-amount {
    font-size: 2rem;
    font-weight: 700;
    color: #22c55e;
  }

  .mega-progress { margin-bottom: 24px; }

  .mega-progress-bar {
    height: 32px;
    background: var(--color-bg-tertiary);
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  .mega-progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #22c55e, #f59e0b);
    border-radius: 16px;
    transition: width 1s ease;
    position: relative;
  }

  .mega-progress-fill::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }

  .progress-labels {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .goal-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16px;
  }

  .goal-stat {
    text-align: center;
    padding: 16px;
    background: var(--color-bg-secondary);
    border-radius: 12px;
  }

  .goal-stat .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
  }

  .goal-stat .stat-label {
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .streams-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 32px;
  }

  .stream-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
  }

  .stream-card.highlight {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(6, 182, 212, 0.1));
    border-color: rgba(34, 197, 94, 0.3);
  }

  .stream-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .stream-icon { font-size: 1.5rem; }
  .stream-header h3 { margin: 0; font-size: 1rem; }

  .stream-amount {
    font-size: 2rem;
    font-weight: 700;
    color: #22c55e;
    margin-bottom: 16px;
  }

  .stream-amount.negative { color: #ef4444; }
  .stream-amount.large { font-size: 2.5rem; }

  .stream-breakdown {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-bottom: 16px;
  }

  .breakdown-item {
    display: flex;
    justify-content: space-between;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .stream-target {
    padding: 8px 12px;
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    font-size: 0.8rem;
    text-align: center;
    color: var(--color-text-muted);
  }

  .stream-target.cost { color: #f59e0b; }
  .stream-target.success { color: #22c55e; }

  .chart-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
  }

  .chart-card h3 { margin: 0 0 24px 0; }

  .chart-container { position: relative; }

  .chart-bars {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 8px;
    height: 200px;
    align-items: end;
  }

  .chart-bar {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    justify-content: flex-end;
  }

  .bar-fill {
    width: 100%;
    background: linear-gradient(180deg, #22c55e, #16a34a);
    border-radius: 4px 4px 0 0;
    transition: height 0.5s ease;
    min-height: 4px;
  }

  .chart-bar span {
    margin-top: 8px;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .chart-target-line {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    border-top: 2px dashed #f59e0b;
    text-align: right;
    padding-right: 8px;
  }

  .chart-target-line span {
    background: var(--color-bg-secondary);
    padding: 2px 8px;
    font-size: 0.75rem;
    color: #f59e0b;
  }

  @media (max-width: 768px) {
    .goal-stats { grid-template-columns: repeat(2, 1fr); }
    .streams-grid { grid-template-columns: 1fr; }
  }
</style>

<script>
  // Demo data - in production, fetch from /api/admin/revenue
  function loadRevenueData() {
    // Simulate some revenue data
    const data = {
      ytd: 0,
      monthlyAvg: 0,
      saas: { total: 0, starter: 0, pro: 0, enterprise: 0 },
      franchise: { total: 0, fees: 0, share: 0, count: 0 },
      marketplace: { total: 0, take: 0, sales: 0, creators: 0 },
      services: { total: 0, projects: 0, avgValue: 0, clients: 0 },
      affiliates: { payouts: 0, conversions: 0, count: 0 }
    };

    // Calculate
    const gross = data.saas.total + data.franchise.total + data.marketplace.total + data.services.total;
    const net = gross - data.affiliates.payouts;
    const progress = (net / 1000000) * 100;

    // Update UI
    document.getElementById('goal-progress')!.style.width = `${progress}%`;
    document.getElementById('current-revenue')!.textContent = `$${net.toLocaleString()}`;
    document.getElementById('ytd-revenue')!.textContent = `$${net.toLocaleString()}`;
    
    const now = new Date();
    const monthsElapsed = now.getMonth() + 1;
    const monthsLeft = 12 - monthsElapsed;
    const requiredMonthly = monthsLeft > 0 ? (1000000 - net) / monthsLeft : 0;
    
    document.getElementById('monthly-avg')!.textContent = `$${Math.round(net / Math.max(1, monthsElapsed)).toLocaleString()}`;
    document.getElementById('months-left')!.textContent = monthsLeft.toString();
    document.getElementById('required-monthly')!.textContent = `$${Math.round(requiredMonthly).toLocaleString()}`;

    // Update streams
    document.getElementById('saas-revenue')!.textContent = `$${data.saas.total.toLocaleString()}`;
    document.getElementById('franchise-revenue')!.textContent = `$${data.franchise.total.toLocaleString()}`;
    document.getElementById('marketplace-revenue')!.textContent = `$${data.marketplace.total.toLocaleString()}`;
    document.getElementById('services-revenue')!.textContent = `$${data.services.total.toLocaleString()}`;
    document.getElementById('affiliate-payouts')!.textContent = `-$${data.affiliates.payouts.toLocaleString()}`;
    document.getElementById('net-revenue')!.textContent = `$${net.toLocaleString()}`;
    document.getElementById('gross-revenue')!.textContent = `$${gross.toLocaleString()}`;
    document.getElementById('total-payouts')!.textContent = `$${data.affiliates.payouts.toLocaleString()}`;
    document.getElementById('net-calc')!.textContent = `$${net.toLocaleString()}`;

    // On track calculation
    const onTrack = net >= (1000000 / 12 * monthsElapsed);
    document.getElementById('on-track')!.textContent = onTrack ? '‚úÖ Yes' : '‚ö†Ô∏è Behind';
  }

  loadRevenueData();
</script>
