  }

  .win3-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--win-color);
    margin-bottom: 8px;
  }

  .win3-value {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin-bottom: 12px;
  }

  .win3-bar {
    height: 8px;
    background: var(--color-bg-tertiary);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .win3-fill {
    height: 100%;
    background: var(--win-color);
    border-radius: 4px;
    animation: bar-fill 1s ease-out both;
    animation-delay: calc(var(--delay) * 0.2s + 0.5s);
  }

  @keyframes bar-fill {
    from { width: 0; }
  }

  .win3-desc {
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .win3-total {
    text-align: center;
    padding: 16px 24px;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(59, 130, 246, 0.1));
