<style>
  /* ===================== PAGE CONTAINER ===================== */
  .agentops-page {
    min-height: 100vh;
    padding: 64px 24px;
    background: var(--color-bg-primary);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  /* ===================== HERO WOW ===================== */
  .hero {
    text-align: center;
    margin-bottom: 80px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-icon {
    font-size: 5rem;
    margin-bottom: 16px;
    animation: float 3s ease-in-out infinite, icon-glow 2s ease-in-out infinite;
    filter: drop-shadow(0 0 30px rgba(34, 197, 94, 0.4));
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(-12px) rotate(2deg); }
  }

  @keyframes icon-glow {
    0%, 100% { filter: drop-shadow(0 0 30px rgba(34, 197, 94, 0.4)); }
    50% { filter: drop-shadow(0 0 50px rgba(34, 197, 94, 0.7)); }
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #8b5cf6, #22c55e);
    background-size: 300% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: title-shine 5s linear infinite;
    margin-bottom: 12px;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 300% center; }
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #22c55e;
    font-weight: 600;
    margin-bottom: 8px;
  }

  .hero-desc {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  /* ===================== SECTION TITLES ===================== */
  .section-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: 40px;
  }

  /* ===================== ARCHITECTURE DIAGRAM ===================== */
  .architecture-section {
    margin-bottom: 80px;
  }

  .arch-diagram {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .arch-layer {
    width: 100%;
    max-width: 600px;
    padding: 20px;
    border-radius: 16px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    animation: layer-entrance 0.6s ease-out both;
  }

  .arch-layer:nth-child(1) { animation-delay: 0.1s; }
  .arch-layer:nth-child(3) { animation-delay: 0.2s; }
  .arch-layer:nth-child(5) { animation-delay: 0.3s; }
  .arch-layer:nth-child(7) { animation-delay: 0.4s; }

  @keyframes layer-entrance {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .layer-label {
    font-weight: 700;
    color: var(--color-text-primary);
    font-size: 0.9rem;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .frontend { border-color: #22c55e; }
  .frontend .layer-label { color: #22c55e; }
  
  .backend { border-color: #3b82f6; }
  .backend .layer-label { color: #3b82f6; }
  
  .agents-layer { border-color: #8b5cf6; }
  .agents-layer .layer-label { color: #8b5cf6; }
  
  .data { border-color: #06b6d4; }
  .data .layer-label { color: #06b6d4; }

  .layer-items {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .arch-item {
    padding: 8px 16px;
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    animation: pop-in 0.4s ease-out both;
    animation-delay: calc(var(--delay) * 0.1s);
    transition: all 0.2s ease;
  }

  @keyframes pop-in {
    from { opacity: 0; transform: scale(0.8); }
    to { opacity: 1; transform: scale(1); }
  }

  .arch-item:hover {
    background: #22c55e;
    color: white;
    transform: translateY(-2px);
  }

  .arch-arrow {
    font-size: 1.5rem;
    color: var(--color-text-muted);
    animation: arrow-bounce 1s ease-in-out infinite;
  }

  @keyframes arrow-bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(4px); }
  }

  /* ===================== AGENTS GRID ===================== */
  .agents-section {
    margin-bottom: 80px;
  }

  .agents-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 16px;
  }

  .agent-card {
    padding: 20px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
    animation: card-entrance 0.5s ease-out both;
    animation-delay: calc(var(--delay) * 0.05s);
  }

  @keyframes card-entrance {
    from { opacity: 0; transform: translateY(20px) scale(0.95); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  .agent-card:hover {
    transform: translateY(-6px);
    border-color: var(--agent-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .agent-icon {
    font-size: 2.5rem;
    margin-bottom: 10px;
  }

  .agent-card:hover .agent-icon {
    animation: agent-pulse 0.5s ease-out;
  }

  @keyframes agent-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
  }

  .agent-name {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 4px;
  }

  .agent-desc {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin-bottom: 10px;
  }

  .agent-status {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 0.7rem;
    color: #22c55e;
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
    animation: dot-pulse 1.5s ease-in-out infinite;
  }

  @keyframes dot-pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.3); }
  }

  /* ===================== BUSINESS SUITES ===================== */
  .suites-section {
    margin-bottom: 80px;
  }

  .suites-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  .suite-card {
    padding: 24px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    transition: all 0.3s ease;
    animation: card-entrance 0.5s ease-out both;
    animation-delay: calc(var(--delay) * 0.1s);
  }

  .suite-card:hover {
    transform: translateY(-6px);
    border-color: var(--suite-color);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .suite-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .suite-icon {
    font-size: 2rem;
  }

  .suite-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }

  .suite-binh-phap {
    font-size: 0.8rem;
    color: var(--suite-color);
    font-weight: 500;
  }

  .suite-commands {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .command-tag {
    padding: 6px 12px;
    background: var(--color-bg-tertiary);
    border-radius: 6px;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    transition: all 0.2s ease;
  }

  .suite-card:hover .command-tag {
    background: var(--suite-color);
    color: white;
  }

  /* ===================== WIN3 METRICS ===================== */
  .win3-section {
    margin-bottom: 80px;
  }

  .win3-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 24px;
  }

  @media (max-width: 768px) {
    .win3-grid { grid-template-columns: 1fr; }
  }

  .win3-card {
    padding: 24px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-align: center;
    animation: card-entrance 0.5s ease-out both;
    animation-delay: calc(var(--delay) * 0.15s);
    transition: all 0.3s ease;
  }

  .win3-card:hover {
    transform: translateY(-4px);
