  // Counter animation
  function animateValue(id: string, start: number, end: number, duration: number, prefix = '', suffix = '') {
    const element = document.getElementById(id);
    if (!element) return;
    
    const range = end - start;
    const increment = range / (duration / 16);
    let current = start;
    
    const timer = setInterval(() => {
      current += increment;
      if ((increment > 0 && current >= end) || (increment < 0 && current <= end)) {
        current = end;
        clearInterval(timer);
      }
      element.textContent = prefix + Math.floor(current).toLocaleString() + suffix;
    }, 16);
  }

  // Update live time
  function updateTime() {
    const now = new Date();
    const timeStr = now.toLocaleString('en-US', { 
      month: 'short', 
      day: 'numeric', 
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
    document.getElementById('live-time')!.textContent = timeStr;
  }

  // Fetch agency stats from API
  async function fetchAgencyStats() {
    try {
      const response = await fetch('/api/agency/stats');
      const data = await response.json();
      
      if (!response.ok) {
        console.error('API Error:', data);
        return null;
      }
      
      return data;
    } catch (error) {
      console.error('Failed to fetch agency stats:', error);
      return null;
    }
  }

  // Render metrics with animation
  function renderMetrics(data: any) {
    const metrics = data.metrics;
    
    animateValue('revenue-value', 0, metrics.revenue_mtd || 0, 2000, '$', '');
    animateValue('clients-value', 0, metrics.active_clients || 0, 2000);
    animateValue('margin-value', 0, metrics.profit_margin || 0, 2000, '', '%');
    animateValue('util-value', 0, metrics.utilization || 0, 2000, '', '%');
    animateValue('nps-value', 0, metrics.nps_score || 0, 2000);
    animateValue('pipeline-value', 0, metrics.pipeline ? Math.floor(metrics.pipeline / 1000) : 0, 2000, '$', 'K');
  }

  // Initialize
  updateTime();
  setInterval(updateTime, 1000);
  
  // Fetch and display live data
  (async () => {
    const data = await fetchAgencyStats();
    if (data) {
      setTimeout(() => renderMetrics(data), 500);
    } else {
      // Fallback to demo values if API fails
      setTimeout(() => {
        animateValue('revenue-value', 0, 45200, 2000, '$', '');
        animateValue('clients-value', 0, 15, 2000);
        animateValue('margin-value', 0, 42, 2000, '', '%');
        animateValue('util-value', 0, 82, 2000, '', '%');
        animateValue('nps-value', 0, 72, 2000);
        animateValue('pipeline-value', 0, 125, 2000, '$', 'K');
      }, 500);
    }
  })();

  // Auto-refresh every 30 seconds
  setInterval(async () => {
    const data = await fetchAgencyStats();
    if (data) {
      renderMetrics(data);
    }
  }, 30000);
</script>

