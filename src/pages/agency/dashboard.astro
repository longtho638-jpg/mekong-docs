<style>
  /* ===================== WOW COMMAND CENTER ===================== */
  .command-center {
    max-width: 1600px;
    margin: 0 auto;
    padding: 100px 24px 40px;
  }

  /* Header */
  .center-header {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(6, 182, 212, 0.1));
    border: 1px solid var(--color-border);
    border-radius: 20px;
    padding: 32px;
    margin-bottom: 32px;
    animation: header-entrance 0.6s ease-out;
    position: relative;
    overflow: hidden;
  }

  @keyframes header-entrance {
    from { opacity: 0; transform: translateY(-30px) scale(0.98); }
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .center-title {
    font-size: 2.5rem;
    margin: 0 0 8px 0;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #22c55e);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: rainbow-shift 6s linear infinite;
  }

  @keyframes rainbow-shift {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  .center-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    margin: 0;
    letter-spacing: 2px;
    text-transform: uppercase;
    animation: fade-in-delay 0.6s ease-out 0.3s both;
  }

  @keyframes fade-in-delay {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .pulse-indicator {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 20px;
    background: rgba(34, 197, 94, 0.15);
    border-radius: 24px;
    margin-bottom: 8px;
  }

  .pulse-dot {
    width: 12px;
    height: 12px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse-ring 2s ease-out infinite;
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
  }

  @keyframes pulse-ring {
    0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
    100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); }
  }

  .pulse-text {
    font-weight: 700;
    color: #22c55e;
    font-size: 0.9rem;
  }

  .live-time {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    font-family: monospace;
    animation: fade-in-delay 0.6s ease-out 0.4s both;
  }

  /* Metrics Grid */
  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    margin-bottom: 32px;
  }

  .metric-card {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    display: flex;
    align-items: center;
    gap: 20px;
    animation: metric-pop 0.5s ease-out both;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .metric-card:nth-child(1) { animation-delay: 0.1s; }
  .metric-card:nth-child(2) { animation-delay: 0.2s; }
  .metric-card:nth-child(3) { animation-delay: 0.3s; }
  .metric-card:nth-child(4) { animation-delay: 0.4s; }
  .metric-card:nth-child(5) { animation-delay: 0.5s; }
  .metric-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes metric-pop {
    from { opacity: 0; transform: scale(0.9) translateY(20px); }
    to { opacity: 1; transform: scale(1) translateY(0); }
  }

  .metric-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(34, 197, 94, 0.2);
    border-color: rgba(34, 197, 94, 0.4);
  }

  .metric-icon {
    font-size: 2.5rem;
    animation: icon-bounce 3s ease-in-out infinite;
  }

  @keyframes icon-bounce {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-8px) rotate(5deg); }
  }

  .metric-label {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin-bottom: 4px;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text-primary);
    line-height: 1;
    margin-bottom: 4px;
  }

  .metric-trend {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 12px;
    display: inline-block;
  }

  .metric-trend.positive {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  .metric-trend.neutral {
    background: rgba(148, 163, 184, 0.2);
    color: #94a3b8;
  }

  /* Main Grid */
  .center-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    grid-template-rows: auto auto;
    gap: 24px;
  }

  .panel {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    animation: panel-slide 0.5s ease-out both;
    transition: all 0.3s ease;
  }

  .system-panel {
    grid-row: span 2;
    animation-delay: 0.7s;
  }

  .actions-panel { animation-delay: 0.8s; }
  .priorities-panel { animation-delay: 0.9s; }

  @keyframes panel-slide {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  .panel:hover {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .panel-header h2 {
    font-size: 1.15rem;
    margin: 0;
  }

  .status-badge {
    padding: 6px 14px;
    border-radius: 16px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .status-badge.all-operational {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
  }

  /* System Grid */
  .systems-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .system-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: var(--color-bg-primary);
    border-radius: 12px;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .system-item:hover {
    transform: translateX(4px);
    border-color: rgba(34, 197, 94, 0.3);
    box-shadow: 0 4px 15px rgba(34, 197, 94, 0.1);
  }

  .system-status {
    font-size: 1.2rem;
    animation: status-pulse 2s ease-in-out infinite;
  }

  @keyframes status-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
  }

  .system-name {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  /* Actions Grid */
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .action-btn {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .action-btn:hover {
    border-color: #22c55e;
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(34, 197, 94, 0.2);
  }

  .action-icon {
    font-size: 1.5rem;
  }

  .action-label {
    font-size: 0.9rem;
  }

  /* Priorities List */
  .priorities-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .priority-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px;
    background: var(--color-bg-primary);
    border-radius: 10px;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .priority-item:hover {
    transform: translateX(6px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }

  .priority-dot {
    font-size: 1rem;
  }

  .priority-text {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 1200px) {
    .metrics-grid { grid-template-columns: repeat(2, 1fr); }
    .center-grid { grid-template-columns: 1fr; }
    .system-panel { grid-row: span 1; }
  }

  @media (max-width: 640px) {
    .metrics-grid { grid-template-columns: 1fr; }
    .systems-grid { grid-template-columns: 1fr; }
    .actions-grid { grid-template-columns: 1fr; }
    .center-title { font-size: 1.75rem; }
    .command-suites { grid-template-columns: repeat(3, 1fr); }
    .dashboard-nav { grid-template-columns: 1fr; }
  }

  /* üèØ 135 Commands Panel */
  .commands-panel {
    margin-top: 24px;
    animation: panel-slide 0.5s ease-out 1s both;
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.05), rgba(139, 92, 246, 0.05));
  }

  .nav-link {
    color: #22c55e;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.85rem;
    transition: all 0.2s ease;
  }

  .nav-link:hover {
    color: #4ade80;
    transform: translateX(4px);
  }

  .command-suites {
    display: grid;
    grid-template-columns: repeat(9, 1fr);
    gap: 12px;
    margin-bottom: 20px;
  }

  .suite-chip {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px 8px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .suite-chip:hover {
    transform: translateY(-4px);
    border-color: #22c55e;
    box-shadow: 0 8px 25px rgba(34, 197, 94, 0.2);
  }

  .chip-icon {
    font-size: 1.5rem;
    margin-bottom: 8px;
  }

  .chip-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 4px;
  }

  .chip-count {
    font-size: 0.65rem;
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
    padding: 2px 8px;
    border-radius: 10px;
    font-weight: 700;
  }

  .command-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px;
    background: var(--color-bg-primary);
    border-radius: 12px;
    animation: cta-pulse 2s ease-in-out infinite;
  }

  @keyframes cta-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 0 8px rgba(34, 197, 94, 0); }
  }

  .cta-hint {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
  }

  kbd {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 6px 12px;
    border-radius: 8px;
