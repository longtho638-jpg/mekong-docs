<style>
  .quickstart-hero {
    text-align: center;
    padding: 64px 24px 32px;
  }

  .quickstart-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #06b6d4, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .personas-grid {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
  }

  .persona-card {
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .persona-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .persona-card.developer:hover { border-color: #22c55e; }
  .persona-card.marketing:hover { border-color: #f97316; }
  .persona-card.sales:hover { border-color: #3b82f6; }
  .persona-card.finance:hover { border-color: #8b5cf6; }
  .persona-card.founder:hover { border-color: #eab308; }

  .persona-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    flex-wrap: wrap;
  }

  .persona-icon {
    font-size: 2rem;
  }

  .persona-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
  }

  .money-tag {
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    margin-left: auto;
  }

  .commands-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .commands-list code {
    background: var(--color-bg-tertiary);
    color: #22c55e;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.8rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .money-flow {
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    padding: 12px;
    margin-bottom: 16px;
  }

  .money-flow p {
    margin: 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .money-flow .money {
    color: #22c55e;
    font-weight: 700;
  }

  .btn-start {
    display: block;
    text-align: center;
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    padding: 12px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
    border: 1px solid var(--color-border);
  }

  .btn-start:hover {
    background: #22c55e;
    color: white;
    border-color: #22c55e;
  }

  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, rgba(34, 197, 94, 0.05));
    border-top: 1px solid var(--color-border);
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .cta-section p {
    color: var(--color-text-muted);
    margin-bottom: 24px;
  }

  .btn-primary {
    display: inline-block;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
  }

  @media (max-width: 768px) {
    .quickstart-hero h1 {
      font-size: 2rem;
    }

    .personas-grid {
      grid-template-columns: 1fr;
    }
  }
