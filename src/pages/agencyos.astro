  const proofs = [
    { name: 'Michael', country: 'US', action: 'joined Pro', initial: 'M', color: 'linear-gradient(135deg, #22c55e, #06b6d4)' },
    { name: 'Sarah', country: 'UK', action: 'upgraded to Franchise', initial: 'S', color: 'linear-gradient(135deg, #8b5cf6, #ec4899)' },
    { name: 'Lee', country: 'SG', action: 'just started free trial', initial: 'L', color: 'linear-gradient(135deg, #f59e0b, #ef4444)' },
