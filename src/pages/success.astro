---
import LandingLayout from '../layouts/LandingLayout.astro';

const title = 'Welcome to AgencyOS!';
const description = 'Your account is ready. Get your license key and start automating your agency.';
---

<LandingLayout title={title} description={description}>
  <section class="success-section">
    <div class="success-card">
      
      <div class="success-icon">ðŸŽ‰</div>
      
      <h1>Welcome to AgencyOS!</h1>
      
      <div class="welcome-message" id="welcome-message">
        <p>Your account has been created successfully.</p>
      </div>

      <!-- License Key Section -->
      <div class="license-section" id="license-section">
        <h3>ðŸ”‘ Your License Key</h3>
        <div class="license-box">
          <code id="license-key">AGENCYOS-XXXX-XXXX-XXXX</code>
          <button id="copy-license" class="btn-copy" title="Copy license key">ðŸ“‹</button>
        </div>
        <p class="license-note">Keep this key safe. You'll need it to activate your CLI.</p>
      </div>

      <!-- Account Info -->
      <div class="account-info" id="account-info">
        <div class="info-row">
          <span class="label">Email:</span>
          <span class="value" id="user-email">-</span>
        </div>
        <div class="info-row">
          <span class="label">Plan:</span>
          <span class="value" id="user-plan">Pro</span>
        </div>
        <div class="info-row" id="discount-info" style="display: none;">
          <span class="label">Status:</span>
          <span class="value text-green" id="user-discount">LIFETIME FREE</span>
        </div>
      </div>

      <!-- Installation Steps -->
      <div class="install-steps">
        <h3>ðŸš€ Quick Setup (2 minutes)</h3>
        
        <div class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <strong>Install AgencyOS CLI</strong>
            <div class="code-block">
              <code>npm install -g @agencyos/cli</code>
              <button class="btn-copy-small" data-copy="npm install -g @agencyos/cli">ðŸ“‹</button>
            </div>
          </div>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <strong>Activate your license</strong>
            <div class="code-block">
              <code id="activate-cmd">mk activate YOUR-LICENSE-KEY</code>
              <button class="btn-copy-small" id="copy-activate">ðŸ“‹</button>
            </div>
          </div>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <strong>Open in your IDE</strong>
            <div class="ide-buttons">
              <a href="vscode://vscode.git/clone?url=https://github.com/agencyos/starter" class="ide-btn" title="Open in VS Code">
                <span>VS Code</span>
              </a>
              <a href="cursor://vscode.git/clone?url=https://github.com/agencyos/starter" class="ide-btn" title="Open in Cursor">
                <span>Cursor</span>
              </a>
              <a href="https://antigravity.google/?repo=agencyos/starter" class="ide-btn antigravity" title="Open in Antigravity">
                <span>ðŸš€ Antigravity</span>
              </a>
            </div>
          </div>
        </div>

        <div class="step">
          <div class="step-number">4</div>
          <div class="step-content">
            <strong>Run your first command</strong>
            <div class="code-block">
              <code>mk help</code>
              <button class="btn-copy-small" data-copy="mk help">ðŸ“‹</button>
            </div>
            <p class="step-note">Access all 85+ AI commands instantly!</p>
          </div>
        </div>
      </div>

      <!-- IDE Compatibility -->
      <div class="ide-compatibility">
        <h4>âœ… Compatible with:</h4>
        <div class="ide-logos">
          <span class="ide-logo">VS Code</span>
          <span class="ide-logo">Cursor</span>
          <span class="ide-logo highlight">Antigravity</span>
          <span class="ide-logo">Windsurf</span>
          <span class="ide-logo">Claude Code</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="cta-buttons">
        <a href="/docs/getting-started/installation" class="btn-primary">
          ðŸ“– Full Documentation â†’
        </a>
        <a href="/quickstart" class="btn-secondary">
          ðŸŽ¯ Quick Start Guide
        </a>
      </div>

      <!-- Email Sent Notice -->
      <div class="email-notice" id="email-notice">
        <p>ðŸ“§ We've also sent these instructions to your email.</p>
      </div>

      <div class="support-note">
        <p>Need help? <a href="mailto:support@agencyos.network">support@agencyos.network</a> | <a href="/license">Manage License</a></p>
      </div>

    </div>
  </section>
</LandingLayout>

<style>
  .success-section {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
  }

  .success-card {
    background: var(--color-bg-secondary);
    border: 2px solid #22c55e;
    border-radius: 16px;
    padding: 40px;
    max-width: 700px;
    width: 100%;
  }

  .success-icon {
    font-size: 3rem;
    text-align: center;
    margin-bottom: 8px;
  }

  .success-card h1 {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-text-primary);
    margin: 0 0 8px 0;
    text-align: center;
  }

  .welcome-message {
    color: var(--color-text-muted);
    margin-bottom: 24px;
    text-align: center;
  }

  .welcome-message p { margin: 4px 0; }

  /* License Section */
  .license-section {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(6, 182, 212, 0.1));
    border: 2px dashed #22c55e;
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    text-align: center;
  }

  .license-section h3 {
    margin: 0 0 12px 0;
    color: var(--color-text-primary);
    font-size: 1rem;
  }

  .license-box {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    padding: 12px 16px;
  }

  .license-box code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.1rem;
    color: #22c55e;
    letter-spacing: 1px;
  }

  .btn-copy {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    padding: 8px 12px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s;
  }

  .btn-copy:hover { background: #22c55e; }

  .license-note {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 8px 0 0 0;
  }

  /* Account Info */
  .account-info {
    background: var(--color-bg-tertiary);
    border-radius: 12px;
    padding: 16px;
    margin-bottom: 24px;
  }

  .info-row {
    display: flex;
    justify-content: space-between;
    padding: 6px 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.9rem;
  }

  .info-row:last-child { border-bottom: none; }

  .info-row .label { color: var(--color-text-muted); }
  .info-row .value { color: var(--color-text-primary); font-weight: 600; }
  .text-green { color: #22c55e !important; }

  /* Install Steps */
  .install-steps {
    margin-bottom: 24px;
  }

  .install-steps h3 {
    color: var(--color-text-primary);
    margin: 0 0 16px 0;
    font-size: 1.1rem;
  }

  .step {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
    align-items: flex-start;
  }

  .step-number {
    width: 28px;
    height: 28px;
    background: #22c55e;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.85rem;
    flex-shrink: 0;
  }

  .step-content {
    flex: 1;
  }

  .step-content strong {
    color: var(--color-text-primary);
    font-size: 0.95rem;
    display: block;
    margin-bottom: 8px;
  }

  .code-block {
    display: flex;
    align-items: center;
    gap: 8px;
    background: var(--color-bg-tertiary);
    padding: 10px 14px;
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }

  .code-block code {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: #22c55e;
    flex: 1;
  }

  .btn-copy-small {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .btn-copy-small:hover { opacity: 1; }

  .step-note {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin: 6px 0 0 0;
  }

  /* IDE Buttons */
  .ide-buttons {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .ide-btn {
    padding: 8px 16px;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    color: var(--color-text-primary);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.2s;
  }

  .ide-btn:hover { border-color: #22c55e; }

  .ide-btn.antigravity {
    background: linear-gradient(135deg, #4285f4, #34a853);
    border: none;
    color: white;
  }

  /* IDE Compatibility */
  .ide-compatibility {
    text-align: center;
    margin-bottom: 24px;
    padding: 16px;
    background: var(--color-bg-tertiary);
    border-radius: 12px;
  }

  .ide-compatibility h4 {
    margin: 0 0 12px 0;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .ide-logos {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .ide-logo {
    padding: 4px 12px;
    background: var(--color-bg-secondary);
    border-radius: 20px;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .ide-logo.highlight {
    background: linear-gradient(135deg, #4285f4, #34a853);
    color: white;
  }

  /* CTA Buttons */
  .cta-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 16px;
  }

  .btn-primary {
    padding: 12px 24px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(34, 197, 94, 0.3);
  }

  .btn-secondary {
    padding: 12px 24px;
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
  }

  .email-notice {
    text-align: center;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 12px;
  }

  .email-notice p { margin: 0; }

  .support-note {
    text-align: center;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  .support-note a {
    color: #22c55e;
    text-decoration: none;
  }

  @media (max-width: 480px) {
    .success-card { padding: 24px; }
    .success-card h1 { font-size: 1.5rem; }
    .ide-buttons { flex-direction: column; }
    .cta-buttons { flex-direction: column; }
  }
</style>

<script>
  // Generate license key
  function generateLicenseKey(): string {
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
    const segments = [];
    for (let s = 0; s < 3; s++) {
      let segment = '';
      for (let i = 0; i < 4; i++) {
        segment += chars.charAt(Math.floor(Math.random() * chars.length));
      }
      segments.push(segment);
    }
    return 'AGENCYOS-' + segments.join('-');
  }

  // Get user data
  const urlParams = new URLSearchParams(window.location.search);
  const isFree = urlParams.get('free') === 'true';
  const plan = urlParams.get('plan') || 'pro';
  const emailFromUrl = urlParams.get('email');

  const userData = localStorage.getItem('agencyos_user');
  const licenseKeyEl = document.getElementById('license-key');
  const activateCmdEl = document.getElementById('activate-cmd');
  const userEmailEl = document.getElementById('user-email');
  const userPlanEl = document.getElementById('user-plan');
  const discountInfoEl = document.getElementById('discount-info');
  const userDiscountEl = document.getElementById('user-discount');
  const welcomeMessage = document.getElementById('welcome-message');

  // Generate or retrieve license key
  let licenseKey = localStorage.getItem('agencyos_license_key');
  if (!licenseKey) {
    licenseKey = generateLicenseKey();
    localStorage.setItem('agencyos_license_key', licenseKey);
  }

  // Display license key
  if (licenseKeyEl) licenseKeyEl.textContent = licenseKey;
  if (activateCmdEl) activateCmdEl.textContent = `mk activate ${licenseKey}`;

  // Update user info
  if (userData) {
    const user = JSON.parse(userData);
    if (userEmailEl) userEmailEl.textContent = user.email || emailFromUrl || '-';
    if (userPlanEl) userPlanEl.textContent = (user.plan || plan).charAt(0).toUpperCase() + (user.plan || plan).slice(1);
    
    if (user.discount > 0 && discountInfoEl && userDiscountEl) {
      discountInfoEl.style.display = 'flex';
      userDiscountEl.textContent = user.discount === 100 ? 'LIFETIME FREE ðŸŽ‰' : user.discount + '% OFF';
    }
  } else if (emailFromUrl) {
    if (userEmailEl) userEmailEl.textContent = emailFromUrl;
  }

  // Free user message
  if (isFree && welcomeMessage) {
    welcomeMessage.innerHTML = `
      <p>ðŸŽ‰ <strong>You're one of the first 100!</strong></p>
      <p>Enjoy lifetime access to AgencyOS - completely FREE!</p>
    `;
    if (discountInfoEl && userDiscountEl) {
      discountInfoEl.style.display = 'flex';
      userDiscountEl.textContent = 'LIFETIME FREE ðŸŽ‰';
    }
  }

  // Copy buttons
  document.getElementById('copy-license')?.addEventListener('click', () => {
    navigator.clipboard.writeText(licenseKey || '');
    alert('License key copied!');
  });

  document.getElementById('copy-activate')?.addEventListener('click', () => {
    navigator.clipboard.writeText(`mk activate ${licenseKey}`);
    alert('Command copied!');
  });

  document.querySelectorAll('.btn-copy-small[data-copy]').forEach(btn => {
    btn.addEventListener('click', () => {
      const text = btn.getAttribute('data-copy');
      if (text) navigator.clipboard.writeText(text);
      alert('Copied!');
    });
  });

  // Save license with user data
  if (userData) {
    const user = JSON.parse(userData);
    user.licenseKey = licenseKey;
    localStorage.setItem('agencyos_user', JSON.stringify(user));
  }
</script>
