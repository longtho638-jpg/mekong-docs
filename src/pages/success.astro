---
import LandingLayout from '../layouts/LandingLayout.astro';

const title = 'Welcome to AgencyOS!';
const description = 'Your account is ready. Get your license key and start automating your agency.';
---

<LandingLayout title={title} description={description}>
  <!-- Fireworks Canvas -->
  <canvas id="fireworks-canvas"></canvas>
  
  <section class="success-section">
    <div class="success-card">
      
      <div class="success-icon">üéâ</div>
      
      <h1>Welcome to AgencyOS!</h1>
      
      <div class="welcome-message" id="welcome-message">
        <p>Your account has been created successfully.</p>
      </div>

      <!-- License Key Section -->
      <div class="license-section" id="license-section">
        <h3>üîë Your License Key</h3>
        <div class="license-box">
          <code id="license-key">AGENCYOS-XXXX-XXXX-XXXX</code>
          <button id="copy-license" class="btn-copy" title="Copy license key">üìã</button>
        </div>
        <p class="license-note">Keep this key safe. You'll need it to activate your CLI.</p>
      </div>

      <!-- Account Info -->
      <div class="account-info" id="account-info">
        <div class="info-row">
          <span class="label">Email:</span>
          <span class="value" id="user-email">-</span>
        </div>
        <div class="info-row">
          <span class="label">Plan:</span>
          <span class="value" id="user-plan">Pro</span>
        </div>
        <div class="info-row" id="discount-info" style="display: none;">
          <span class="label">Status:</span>
          <span class="value text-green" id="user-discount">LIFETIME FREE</span>
        </div>
      </div>

      <!-- Installation Steps -->
      <div class="install-steps">
        <h3>üöÄ Quick Setup (1 minute)</h3>
        
        <div class="step featured">
          <div class="step-number">1</div>
          <div class="step-content">
            <strong>Open in your IDE (1-click clone)</strong>
            <p class="step-desc">Click a button below. It will automatically clone the project and open it:</p>
            <div class="ide-buttons">
              <a href="vscode://vscode.git/clone?url=https://github.com/longtho638-jpg/agencyos-starter" class="ide-btn" title="Open in VS Code">
                <span>üíª VS Code</span>
              </a>
              <a href="cursor://vscode.git/clone?url=https://github.com/longtho638-jpg/agencyos-starter" class="ide-btn" title="Open in Cursor">
                <span>üñ±Ô∏è Cursor</span>
              </a>
              <a href="https://antigravity.google/?repo=longtho638-jpg/agencyos-starter" class="ide-btn antigravity" title="Open in Antigravity (Recommended)">
                <span>üöÄ Antigravity</span>
              </a>
            </div>
            <p class="step-note">Don't have an IDE? <a href="https://code.visualstudio.com/download" target="_blank">Download VS Code</a> (free)</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <strong>Run in IDE terminal</strong>
            <p class="step-desc">Press <kbd>Ctrl</kbd>+<kbd>`</kbd> to open terminal, then paste:</p>
            <div class="code-block">
              <code>/help</code>
              <button class="btn-copy-small" data-copy="/help">üìã</button>
            </div>
            <p class="step-note">That's it! Start using 125+ AI commands üéâ</p>
          </div>
        </div>

      </div>

      <!-- IDE Compatibility -->
      <div class="ide-compatibility">
        <h4>‚úÖ Compatible with:</h4>
        <div class="ide-logos">
          <span class="ide-logo">VS Code</span>
          <span class="ide-logo">Cursor</span>
          <span class="ide-logo highlight">Antigravity</span>
          <span class="ide-logo">Windsurf</span>
          <span class="ide-logo">Claude Code</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div class="cta-buttons">
        <a href="/docs/getting-started/installation" class="btn-primary">
          üìñ Full Documentation ‚Üí
        </a>
        <a href="/quickstart" class="btn-secondary">
          üéØ Quick Start Guide
        </a>
      </div>

      <!-- Email Sent Notice -->
      <div class="email-notice" id="email-notice">
        <p>üìß We've also sent these instructions to your email.</p>
      </div>

