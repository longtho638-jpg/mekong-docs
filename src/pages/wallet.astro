---
import LandingLayout from '../layouts/LandingLayout.astro';

const title = 'AG Wallet - AgencyOS';
const description = 'Manage your AG Credits - earn from referrals, transfer to others, or spend on SaaS products.';
---

<LandingLayout title={title} description={description}>
  <!-- Hero -->
  <section class="wallet-hero">
    <h1>üí∞ AG Wallet</h1>
    <p>Your internal credit system - Earn, Transfer, Spend</p>
  </section>

  <!-- Balance Card -->
  <section class="wallet-section">
    <div class="balance-card">
      <div class="balance-header">
        <span class="balance-label">Available Balance</span>
        <span class="rank-badge" id="rank-badge">ü•â Chi·∫øn Binh</span>
      </div>
      <div class="balance-amount" id="balance">0.00 AGC</div>
      <div class="balance-usd" id="balance-usd">‚âà $0.00 USD</div>
      
      <div class="balance-stats">
        <div class="stat">
          <span class="stat-label">Lifetime Earned</span>
          <span class="stat-value" id="lifetime-earned">0 AGC</span>
        </div>
        <div class="stat">
          <span class="stat-label">Lifetime Spent</span>
          <span class="stat-value" id="lifetime-spent">0 AGC</span>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
      <button class="btn-action" id="btn-transfer">
        <span class="btn-icon">‚ÜóÔ∏è</span>
        Transfer
      </button>
      <button class="btn-action btn-primary" id="btn-redeem">
        <span class="btn-icon">üõí</span>
        Buy SaaS
      </button>
    </div>
  </section>

  <!-- Transfer Modal -->
  <div class="modal" id="transfer-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>‚ÜóÔ∏è Transfer AGC</h3>
        <button class="modal-close" id="close-transfer">&times;</button>
      </div>
      <form id="transfer-form">
        <div class="form-group">
          <label>Recipient Email</label>
          <input type="email" id="transfer-email" placeholder="user@example.com" required />
        </div>
        <div class="form-group">
          <label>Amount (AGC)</label>
          <input type="number" id="transfer-amount" min="1" step="0.01" placeholder="10.00" required />
        </div>
        <div class="form-group">
          <label>Note (Optional)</label>
          <input type="text" id="transfer-note" placeholder="Thanks for the help!" />
        </div>
        <button type="submit" class="btn-primary full-width">Send Transfer</button>
      </form>
    </div>
  </div>

  <!-- Redeem Modal -->
  <div class="modal" id="redeem-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3>üõí Buy with AGC</h3>
        <button class="modal-close" id="close-redeem">&times;</button>
      </div>
      <div class="product-grid">
        <div class="product-card" data-product="starter_monthly">
          <h4>Starter</h4>
          <div class="product-price">29 AGC</div>
          <p>1 month access</p>
          <button class="btn-buy">Buy Now</button>
        </div>
        <div class="product-card featured" data-product="pro_monthly">
          <h4>Pro</h4>
          <div class="product-price">99 AGC</div>
          <p>1 month access</p>
          <button class="btn-buy">Buy Now</button>
        </div>
        <div class="product-card" data-product="franchise_monthly">
          <h4>Franchise</h4>
          <div class="product-price">299 AGC</div>
          <p>1 month access</p>
          <button class="btn-buy">Buy Now</button>
        </div>
      </div>
    </div>
  </div>

  <!-- Transaction History -->
  <section class="history-section">
    <h2>üìú Transaction History</h2>
    <div class="history-list" id="history-list">
      <div class="loading">Loading...</div>
    </div>
  </section>

  <!-- Rank Progress -->
  <section class="rank-section">
    <h2>üéñÔ∏è Rank Progress</h2>
    <div class="rank-progress">
      <div class="rank-item active">
        <span class="rank-emoji">ü•â</span>
        <span class="rank-name">Chi·∫øn Binh</span>
        <span class="rank-threshold">0+ AGC</span>
      </div>
      <div class="rank-item">
        <span class="rank-emoji">ü•à</span>
        <span class="rank-name">T∆∞·ªõng Qu√¢n</span>
        <span class="rank-threshold">500+ AGC</span>
        <span class="rank-perk">+5% bonus</span>
      </div>
      <div class="rank-item">
        <span class="rank-emoji">ü•á</span>
        <span class="rank-name">Th·ªëng So√°i</span>
        <span class="rank-threshold">2000+ AGC</span>
        <span class="rank-perk">+10% bonus</span>
      </div>
      <div class="rank-item">
        <span class="rank-emoji">üëë</span>
