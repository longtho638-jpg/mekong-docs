<style>
  /* ===================== HERO WOW ===================== */
  .workflows-hero {
    text-align: center;
    padding: 64px 24px 32px;
    animation: hero-entrance 0.8s ease-out;
  }

  @keyframes hero-entrance {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .workflows-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #22c55e, #eab308, #22c55e);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
    animation: title-shine 4s linear infinite;
  }

  @keyframes title-shine {
    0% { background-position: 0% center; }
    100% { background-position: 200% center; }
  }

  .workflows-hero p {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    animation: fade-up 0.6s ease-out 0.2s both;
  }

  @keyframes fade-up {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .workflow-section {
    max-width: 900px;
    margin: 0 auto;
    padding: 24px;
  }

  /* ===================== WORKFLOW CARDS WOW ===================== */
  .workflow-card {
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-border);
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s ease;
    animation: card-entrance 0.6s ease-out both;
  }

  .workflow-section:nth-of-type(2) .workflow-card { animation-delay: 0.3s; }
  .workflow-section:nth-of-type(3) .workflow-card { animation-delay: 0.5s; }
  .workflow-section:nth-of-type(4) .workflow-card { animation-delay: 0.7s; }

  @keyframes card-entrance {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .workflow-card:hover {
    transform: translateY(-6px) scale(1.01);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }

  .workflow-card.affiliate:hover { border-color: #22c55e; }
  .workflow-card.code-content:hover { border-color: #3b82f6; }
  .workflow-card.consulting:hover { border-color: #eab308; }

  .workflow-header {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    margin-bottom: 24px;
  }

  .workflow-number {
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 700;
    font-size: 1.25rem;
    animation: number-pulse 2s ease-in-out infinite;
  }

  @keyframes number-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .workflow-header h2 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 8px 0;
  }

  .income-badge {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .workflow-flow {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 24px;
    padding: 16px;
    background: var(--color-bg-tertiary);
    border-radius: 12px;
  }

  .flow-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 4px;
  }

  .flow-step code {
    background: var(--color-bg-secondary);
    color: #22c55e;
    padding: 6px 12px;
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    border: 1px solid var(--color-border);
  }

  .flow-step span {
    font-size: 0.7rem;
    color: var(--color-text-muted);
  }

  .flow-step.result {
    background: var(--color-bg-secondary);
    padding: 12px 16px;
    border-radius: 8px;
    border: 2px solid #22c55e;
  }

  .flow-step.result .money {
    font-size: 1rem;
    font-weight: 700;
    color: #22c55e;
  }

  .flow-arrow {
    color: var(--color-text-muted);
    font-size: 1.25rem;
    animation: arrow-slide 1.5s ease-in-out infinite;
  }

  @keyframes arrow-slide {
    0%, 100% { transform: translateX(0); opacity: 1; }
    50% { transform: translateX(4px); opacity: 0.6; }
  }

  .workflow-steps {
    border-top: 1px solid var(--color-border);
    padding-top: 16px;
  }

  .workflow-steps h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-muted);
    margin: 0 0 12px 0;
    text-transform: uppercase;
  }

  .workflow-steps ol {
    margin: 0;
    padding-left: 20px;
  }

  .workflow-steps li {
    color: var(--color-text-secondary);
    margin-bottom: 8px;
    font-size: 0.9rem;
  }

  .workflow-steps code {
    color: #22c55e;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
  }

  /* ===================== CTA WOW ===================== */
  .cta-section {
    text-align: center;
    padding: 64px 24px;
    background: linear-gradient(180deg, transparent, rgba(34, 197, 94, 0.05));
    border-top: 1px solid var(--color-border);
    animation: fade-up 0.6s ease-out 0.9s both;
  }

  .cta-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    animation: btn-pulse 2.5s ease-in-out infinite;
  }

  @keyframes btn-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 20px 5px rgba(34, 197, 94, 0.2); }
  }

  .btn-primary:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 12px 30px rgba(34, 197, 94, 0.4);
  }

  .btn-secondary {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    padding: 14px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    background: var(--color-bg-secondary);
  }

  @media (max-width: 768px) {
    .workflows-hero h1 {
      font-size: 2rem;
    }

    .workflow-card {
      padding: 20px;
    }

    .workflow-flow {
      justify-content: center;
    }

    .flow-arrow {
      display: none;
    }
  }
</style>
