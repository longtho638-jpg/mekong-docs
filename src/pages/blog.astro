// Sample blog posts
const posts = [
  {
    title: "How I Replaced My Team with AI (And Tripled Profits)",
    excerpt: "The story of how one agency owner went from burnout to breakthrough using AI automation.",
    date: "Dec 20, 2024",
    category: "Case Study",
