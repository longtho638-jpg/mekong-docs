  }
];

const featuredPosts = posts.filter(p => p.featured);
const regularPosts = posts.filter(p => !p.featured);
---

<LandingLayout title={title} description={description}>
  <section class="blog-page">
    <div class="blog-container">
      
      <!-- Header -->
      <div class="blog-header">
        <h1 class="blog-title">Blog</h1>
        <p class="blog-subtitle">
          Tips, tutorials, and insights to help you automate your agency.
        </p>
      </div>

      <!-- Featured Posts -->
      <div class="featured-section">
        <h2 class="section-title">Featured</h2>
        <div class="featured-grid">
          {featuredPosts.map(post => (
            <a href="#" class="featured-card">
              <div class="post-image">{post.image}</div>
              <div class="post-content">
                <div class="post-meta">
                  <span class="post-category">{post.category}</span>
                  <span class="post-date">{post.date}</span>
                </div>
                <h3 class="post-title">{post.title}</h3>
                <p class="post-excerpt">{post.excerpt}</p>
                <span class="post-read">{post.readTime} read â†’</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- All Posts -->
      <div class="posts-section">
        <h2 class="section-title">All Posts</h2>
        <div class="posts-grid">
          {regularPosts.map(post => (
            <a href="#" class="post-card">
              <div class="post-emoji">{post.image}</div>
              <div class="post-body">
                <div class="post-meta">
                  <span class="post-category">{post.category}</span>
                  <span class="post-date">{post.date}</span>
                </div>
                <h3 class="post-title">{post.title}</h3>
                <p class="post-excerpt">{post.excerpt}</p>
                <span class="post-read">{post.readTime} read â†’</span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Newsletter CTA -->
      <div class="newsletter-cta">
        <h2>Subscribe to the Newsletter</h2>
        <p>Get weekly tips on agency automation, AI workflows, and business growth.</p>
        <form class="newsletter-form">
          <input type="email" placeholder="your@email.com" required />
          <button type="submit">Subscribe</button>
        </form>
      </div>

    </div>
  </section>
</LandingLayout>

<style>
  .blog-page {
    min-height: calc(100vh - 72px);
    padding: 64px 24px;
  }

  .blog-container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .blog-title {
    font-size: 3rem;
    font-weight: 700;
    background: linear-gradient(135deg, #22c55e, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 12px;
  }

  .blog-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 24px;
  }

  .featured-section {
    margin-bottom: 48px;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  @media (max-width: 768px) {
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }

  .featured-card {
    display: flex;
    flex-direction: column;
    padding: 24px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s;
  }

  .featured-card:hover {
    border-color: var(--color-accent-green);
    transform: translateY(-4px);
    box-shadow: 0 10px 40px rgba(34, 197, 94, 0.1);
  }

  .post-image {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .post-meta {
    display: flex;
    gap: 12px;
    margin-bottom: 8px;
  }

  .post-category {
    font-size: 0.75rem;
    font-weight: 600;
    color: #22c55e;
    text-transform: uppercase;
  }

  .post-date {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 8px;
    line-height: 1.4;
  }

  .post-excerpt {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 12px;
    line-height: 1.6;
  }

  .post-read {
    font-size: 0.875rem;
    color: #22c55e;
    font-weight: 500;
  }

  .posts-section {
    margin-bottom: 48px;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .post-card {
    display: flex;
    gap: 20px;
    padding: 20px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .post-card:hover {
    border-color: var(--color-accent-green);
  }

  .post-emoji {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background: var(--color-bg-tertiary);
    border-radius: 10px;
  }

  .post-body {
    flex: 1;
  }

  .newsletter-cta {
    text-align: center;
    padding: 48px 32px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 16px;
  }

  .newsletter-cta h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 8px;
  }

  .newsletter-cta p {
    color: var(--color-text-muted);
    margin-bottom: 24px;
  }

  .newsletter-form {
    display: flex;
    gap: 12px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .newsletter-form input {
    padding: 12px 16px;
    width: 280px;
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-primary);
    font-size: 0.875rem;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: #22c55e;
  }

  .newsletter-form button {
    padding: 12px 24px;
    background: #22c55e;
    color: white;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .newsletter-form button:hover {
    filter: brightness(1.1);
  }
</style>
