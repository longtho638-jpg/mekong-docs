<script>
  // Keyboard Shortcuts
  const modal = document.getElementById('shortcuts-modal');
  const closeBtn = document.getElementById('shortcuts-close');
  const overlay = document.getElementById('shortcuts-overlay');
  let gPressed = false;

  function openShortcuts() { modal?.classList.add('open'); }
  function closeShortcuts() { modal?.classList.remove('open'); }

  document.addEventListener('keydown', (e) => {
    // Don't trigger if typing in input
    if (e.target instanceof HTMLInputElement || e.target instanceof HTMLTextAreaElement) return;

    // ? to open shortcuts
    if (e.key === '?' && !e.metaKey && !e.ctrlKey) {
      e.preventDefault();
      openShortcuts();
    }

    // Cmd+K to open quick help
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      e.preventDefault();
      document.getElementById('quick-help')?.classList.toggle('open');
    }

    // ESC to close
    if (e.key === 'Escape') {
      closeShortcuts();
      document.getElementById('quick-help')?.classList.remove('open');
    }

    // G + key navigation
    if (e.key.toLowerCase() === 'g') {
      gPressed = true;
      setTimeout(() => { gPressed = false; }, 1000);
    } else if (gPressed) {
      switch (e.key.toLowerCase()) {
        case 'h': window.location.href = '/agencyos'; break;
        case 'p': window.location.href = '/pricing'; break;
        case 'd': window.location.href = '/demo'; break;
        case 'c': window.location.href = '/commands'; break;
      }
      gPressed = false;
    }
  });

  closeBtn?.addEventListener('click', closeShortcuts);
  overlay?.addEventListener('click', closeShortcuts);
</script>

