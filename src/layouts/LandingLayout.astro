<script>
  // Quick Help Widget Toggle
  document.addEventListener('DOMContentLoaded', () => {
    const widget = document.getElementById('quick-help');
    const toggle = document.getElementById('help-toggle');
    
    toggle?.addEventListener('click', () => {
      widget?.classList.toggle('open');
    });

    // Close on outside click
    document.addEventListener('click', (e) => {
      if (widget && !widget.contains(e.target as Node)) {
        widget.classList.remove('open');
      }
    });

    // Countdown Banner
    const banner = document.getElementById('countdown-banner');
    const closeBtn = document.getElementById('banner-close');
    const timerEl = document.getElementById('countdown-timer');
    
    // Check if dismissed
    if (localStorage.getItem('banner-dismissed') === 'true') {
      banner?.remove();
    } else {
      // Set end date (7 days from now or fixed date)
      const endDate = new Date();
      endDate.setDate(endDate.getDate() + 3); // 3 days from now
      endDate.setHours(23, 59, 59, 0);

      function updateCountdown() {
        const now = new Date().getTime();
        const distance = endDate.getTime() - now;

        if (distance < 0) {
          if (timerEl) timerEl.textContent = '00:00:00';
          return;
        }

        const hours = Math.floor(distance / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if (timerEl) {
          timerEl.textContent = 
            `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
      }

      updateCountdown();
      setInterval(updateCountdown, 1000);

      // Close button
      closeBtn?.addEventListener('click', () => {
        banner?.remove();
        localStorage.setItem('banner-dismissed', 'true');
      });
    }
  });
</script>

