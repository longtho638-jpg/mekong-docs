    if (proofDismissed) return;
    // Random delay between 15-30 seconds
    const delay = 15000 + Math.random() * 15000;
    proofTimeout = setTimeout(() => {
      showProof();
      scheduleNextProof();
    }, delay);
  }

  // Close button
  proofClose?.addEventListener('click', () => {
    proofEl?.classList.remove('visible');
    proofDismissed = true;
    clearTimeout(proofTimeout);
  });

  // Start after 8 seconds
  setTimeout(() => {
    showProof();
    scheduleNextProof();
  }, 8000);

  // Promo Badge Functionality
  const promoBadge = document.getElementById('promo-badge');
  const promoCloseBtn = document.getElementById('promo-close');
  
  // Hide if already closed
  if (localStorage.getItem('promo_closed') === 'true') {
    promoBadge?.classList.add('hidden');
  }
  
  promoCloseBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    promoBadge?.classList.add('hidden');
    localStorage.setItem('promo_closed', 'true');
  });
  
  promoBadge?.addEventListener('click', () => {
    window.location.href = '/pricing?promo=LAUNCH20';
  });
</script>

